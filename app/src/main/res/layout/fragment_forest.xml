<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFCE7"
    tools:context=".Forest_Fragment">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="-20dp"
                >

                <ImageButton
                    android:id="@+id/plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#EBFCE7"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plus1" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/dt1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="小佳佳越来越喜欢书中的小精灵了了"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/dianzan"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="100dp"
                        android:background="@drawable/background"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />
                    <Button
                        android:id="@+id/dianzana"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/say"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"

                android:layout_marginTop="-230dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dt2"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="小佳佳越来越喜欢书中的小精灵了了"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/dianzan1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="100dp"
                        android:background="@drawable/background"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        />
                    <Button
                        android:id="@+id/dianzanb"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/say"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/dt3" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="小佳佳越来越喜欢书中的小精灵了了"
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/dianzan2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="100dp"
                        android:background="@drawable/background"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />
                    <Button
                        android:id="@+id/dianzanc"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/say"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="-230dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round3"
                    android:src="@drawable/dt4" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="小佳佳越来越喜欢书中的小精灵了了"
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/dianzan3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="100dp"
                        android:background="@drawable/background"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />
                    <Button
                        android:id="@+id/dianzand"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/say"
                        />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>




</RelativeLayout>